# ===========================================
# CẤU HÌNH HỆ THỐNG PHÂN LOẠI SINH VIÊN
# ===========================================

# Chế độ debug
DEBUG=True

# Seed cho random (đảm bảo kết quả nhất quán)
SEED=42

# Số cụm K-means (4 mức: Xuất sắc, Khá, Trung bình, Yếu)
N_CLUSTERS=4

# Phương pháp chuẩn hóa mặc định: minmax | zscore | robust
NORMALIZATION_METHOD=minmax

# ===========================================
# NGƯỠNG PHÂN LOẠI (Thang điểm 10)
# ===========================================
# >= 8.0: Xuất sắc
# 7.0 - 7.9: Khá  
# 5.0 - 6.9: Trung bình
# < 5.0: Yếu

XUAT_SAC_THRESHOLD=8.0
KHA_THRESHOLD=7.0
TRUNG_BINH_THRESHOLD=5.0

# ===========================================
# CÔNG THỨC ĐIỂM TÍCH HỢP
# ===========================================
# Bài tập: 30% | Giữa kỳ: 30% | Cuối kỳ: 40%

EXERCISE_WEIGHT=0.30
MIDTERM_WEIGHT=0.30
FINAL_WEIGHT=0.40

# ===========================================
# FLASK SERVER
# ===========================================

FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ===========================================
# SQL SERVER DATABASE (Local)
# ===========================================
# Để trống SQL_USERNAME và SQL_PASSWORD để dùng Windows Authentication

SQL_SERVER=(local)
SQL_DATABASE=StudentClassification
SQL_USERNAME=
SQL_PASSWORD=
SQL_DRIVER=ODBC Driver 17 for SQL Server
