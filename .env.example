# ===========================================
# CẤU HÌNH HỆ THỐNG PHÂN LOẠI SINH VIÊN
# ===========================================
# Copy file này thành .env và điền thông tin

# Chế độ debug
DEBUG=True

# Seed cho random
SEED=42

# Số cụm K-means
N_CLUSTERS=4

# Phương pháp chuẩn hóa: minmax | zscore | robust
NORMALIZATION_METHOD=minmax

# ===========================================
# NGƯỠNG PHÂN LOẠI (Thang điểm 10)
# ===========================================

XUAT_SAC_THRESHOLD=8.0
KHA_THRESHOLD=7.0
TRUNG_BINH_THRESHOLD=5.0

# ===========================================
# CÔNG THỨC ĐIỂM TÍCH HỢP
# ===========================================

EXERCISE_WEIGHT=0.30
MIDTERM_WEIGHT=0.30
FINAL_WEIGHT=0.40

# ===========================================
# SUPABASE DATABASE
# ===========================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# ===========================================
# FLASK SERVER
# ===========================================

FLASK_HOST=0.0.0.0
FLASK_PORT=5000
